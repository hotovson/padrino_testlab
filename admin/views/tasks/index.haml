.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:tasks, :index)
      %li=link_to pat(:new), url(:tasks, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:tasks)
    .inner
      %table.table
        %tr
          %th.first=mat(:task, :tstamp)
          %th=mat(:task, :title)
          %th=mat(:task, :url)
          %th=mat(:task, :body)
          %th=mat(:task, :id)
          %th=mat(:task, :completed)
          %th.last="&nbsp;"
        -@tasks.each do |task|
          %tr
            %td.first=task.tstamp
            %td=task.title
            %td=task.url
            %td=task.body
            %td=task.id
            %td=task.completed
            %td.last
              =button_to pat(:edit), url(:tasks, :edit, :id => task.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:tasks, :destroy, :id => task.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")