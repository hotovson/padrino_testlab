.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:tasks, :index)
      %li=link_to pat(:new), url(:tasks, :new)
      %li.active=link_to pat(:edit), url(:tasks, :edit, :id => @task.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:task)
    .inner
      -form_for :task, url(:tasks, :update, :id => @task.id), :method => :put, :class => :form do |f|
        =partial "tasks/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")